{
  "extends": "../tsconfig.json",
  "baseUrl": "./src",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "composite": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "skipLibCheck": true,
    "noEmit": false
  },
  "include": ["./src"],
  "exclude": [
    "../node_modules",
    "node_modules",
    "**/*.test.ts",
    "test-coverage",
    "test-results"
  ]
}
